<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        .container {
            padding-top: 100px;
            justify-content: 'center'
        }

        h2 {
            padding-bottom: 30px;
            text-align: center;
        }

        th, td {
            border: 1px solid lightgray;
            padding: 5px;
            text-align: center;
        }

        th {
            font-weight: bold;
        }

        td {
            color: gray;
        }

        
    </style>
</head>
<body>
    <div class="container">
        <h2>PhotoBooth</h2>

        <table width="100%">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Full name</th>
                    <th>Asset</th>
                    <th>Instagram Handle</th>
                    <th>Method</th>
                    <th>Status</th>
                    <th>Device</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < photos.length; i++) { %>
                    <tr>
                        <TD><%= photos[i].event %></TD>
                        <TD><a href="http://localhost:8080/uploads/<%= photos[i].filename %>"><%= photos[i].filename %></a></TD>
                        <TD></TD>
                        <TD><%= photos[i].instagramHandle %></TD>
                        <TD><%= photos[i].method %></TD>
                        <TD><%= photos[i].status %></TD>
                        <TD><%= photos[i].device %></TD>
                        <TD><%= moment(photos[i].createdAt).format( 'MMM-DD-YYYY HH:mm:ss a') %></TD>
                    </tr>                    
                    <!-- <div class="col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3><%= photos[i].filename %></h3>
                                <p><%= photos[i].createdAt %></p>
                            </div>
                        </div>
                    </div> -->
                <% } %>
            </tbody>
        </table>
        <!-- <div class="row">
            <% for (var i = 0; i < photos.length; i++) { %>
                <div class="col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3><%= photos[i].filename %></h3>
                            <p><%= photos[i].createdAt %></p>
                        </div>
                    </div>
                </div>
            <% } %>
        </div> -->
            <% if (pages > 0) { %>
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="disabled"><a>First</a></li>
                    <% } else { %>
                        <li><a href="/photos/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                        <% } else { %>
                            <li><a href="/photos/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled"><a>Last</a></li>
                    <% } else { %>
                        <li><a href="/photos/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
    </div>
</body>
</html>